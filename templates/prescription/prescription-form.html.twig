{% extends 'layout_main.html.twig' %}

   {% block content %}
<section class="content-header">
<div class="container-fluid">
    <div class="row">
    <!-- left column -->
    <div class="col-12">
              <div class="card card-gray">
               {#  {% if action == 'create' %} #}
                <div class="card-header">
                   <h3 >Ajout d'une nouvelle prescription</h3>
                   </div>
               {#  {% endif %}
                {% if action == 'edit' %}
                <div class="card-header">
                  <h3>Modifier la prescription</h3>
                </div>
                {% endif %} #}
              </div>

            <div class="row">
                <div class="col-12">
                    <div class="card-body">
                            {{ form_start(form, {'attr': {'id': 'field_form'}}) }}
                            {{ form_errors(form) }}
                            <div class="card-body">
                            <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                        {{ form_label(form.libellePrescrip, "Motif de prescription", {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.libellePrescrip, {'attr': {'class': 'form-control' } }) }}
                                        {{ form_errors(form.libellePrescrip) }}
                                    </div> 
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(form.dossiers, "Selectinner un dossier", {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.dossiers, {'attr': {'class': 'form-control', 'type': 'password' } }) }}
                                        {{ form_errors(form.dossiers) }}
                                    </div>
                                </div>
                            </div>

                            <div class="row">

                                 <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.prescriptiontype, "Type de prescription", {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.prescriptiontype, {'attr': {'class': 'form-control' } }) }}
                                    {{ form_errors(form.prescriptiontype) }}
                                    </div>
                                </div>

                                 <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(form.structures, "Selectinner une structure", {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.structures, {'attr': {'class': 'form-control', 'type': 'text' } }) }}
                                        {{ form_errors(form.structures) }}
                                    </div>
                                </div>
                            </div>
    
                        </div>
                        <div class="card-footer">
                            <button type="submit"
                            class="btn btn-sm btn-success float-right toastrDefaultSuccess">
                                <i class="fa fa-save"></i>
                                Sauvegarder</button>
                            <button type="button" class="btn btn-sm btn-default float-right mr-1 back" onclick='location.href="{{path('listes_prescription') }}"'>
                                <i class ="fa fa-ban"></i>Annuler</button>  
                            {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>
    {% endblock %}
   {% block autresFichiersJs %}
<!-- jQuery -->
<script src="{{ asset('plugins/jquery/jquery.min.js') }}"></script>
<!-- Bootstrap 4 -->
<script src="{{ asset('plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
<!-- AdminLTE App -->
<script src="{{ asset('dist/js/adminlte.min.js') }}"></script>
<!-- AdminLTE for demo purposes -->
<script src="{{ asset('dist/js/demo.js') }}"></script>
<!-- Summernote -->
<script src="{{ asset('plugins/summernote/summernote-bs4.min.js') }}"></script>
<script>
  $(function () {
    // Summernote
    $('.textarea').summernote()
  })
</script>


{% endblock %}
