{% extends 'layout_main.html.twig' %}
{% block title %}Réinitialiser mot de passe
	{% endblock %}
{% block content %}
<section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
			 {% if classe is defined %}
			<div class="{{classe}}">{{resultat}}</div>
		{% endif %}
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="{{ path('menu') }}">Accueil</a></li>
              <li class="breadcrumb-item active">Réinitialiser mot de passe</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
        <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
     <div class="row">
          <div class="col-12">

            <div class="card  card-gray">
              <div class="card-header">
                {% if action == 'create' %}
						<h2 class="card-title">Réinitialisation mot de passe</h2>
					{% endif %}
					{% if action == 'edit' %}
						<h2 class="card-title">Réinitialiser un mot de passe </h2>
					{% endif %}
              </div>
              <!-- /.card-header -->
              <div class="card-body">
				{{ form_start(form, {'attr': {'id': 'field_form'}}) }}
				{{ form_errors(form) }}
				<div class="card-body">
				 <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                  {{ form_label(form.username, "Nom utilisateur", {'label_attr': {'class': 'form-label'}}) }}
                  {{ form_widget(form.username, {'attr': {'class': 'form-control' } }) }}
                  {{ form_errors(form.username) }}
              </div>
            </div>
				 </div>

         <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                  {{ form_label(form.plainPassword.first, "Nouveau mot de passe", {'label_attr': {'class': 'form-label'}}) }}
                  {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'type': 'password' } }) }}
                  {{ form_errors(form.plainPassword.first) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                  {{ form_label(form.plainPassword.second, "Confirmer le mot de passe", {'label_attr': {'class': 'form-label'}}) }}
                  {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'type': 'password' } }) }}
                  {{ form_errors(form.plainPassword.second) }}
                </div>
            </div>
				 </div>
        </div>
				<div class="card-footer">
					<button type="submit" class="btn btn-sm btn-success float-right">
						<i class="fa fa-save"></i>
						Sauvegarder</button>
					{{ form_rest(form) }}
					{{ form_end(form) }}
          <button class="btn btn-sm btn-default float-right mr-1" onclick="goBack()"><i class="fa fa-ban"></i>Annuler</button>
				</div>

			</div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->


{% endblock %}
