{% extends 'layout_main.html.twig' %}

   {% block content %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
            <div class="col-sm-6">
                    {% if action =='editmedecin' %}
                      <h1 class="card-title">Modifification  Médecin</h1>
                    {% endif %}
                    {% if action =='editpatient' %}
                      <h1 class="card-title">Modifification  Patient</h1>
                    {% endif %}
                    {% if action =='editagent' %}
                      <h1 class="card-title">Modifification  Agent</h1>
                    {% endif %}
                    {% if classe is defined %}
                      <div class="{{classe}}">{{resultat}}</div>
                    {% endif %}
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                {% if action =='editmedecin' %}
                <li class="breadcrumb-item"><a href="{{ path('menu') }}">Accueil</a></li>
                <li class="breadcrumb-item active">Médecin</li>
                 {% endif %}
                 {% if action =='editpatient' %}
                <li class="breadcrumb-item"><a href="{{ path('menu') }}">Accueil</a></li>
                <li class="breadcrumb-item active">Patient</li>
                 {% endif %}
                  {% if action =='editagent' %}
                <li class="breadcrumb-item"><a href="{{ path('menu') }}">Accueil</a></li>
                <li class="breadcrumb-item active">Agent</li>
                 {% endif %}
                </ol>
            </div>
            </div>
        </div><!-- /.container-fluid -->
        </section>
        <section class="content-header">
            <div class="container-fluid">
                <div class="row">
                <!-- left column -->
                <div class="col-12">
                    <!-- jquery validation -->
                    <div class="card card-gray">
                        <div class="row">
                            <div class="col-9">
                                <div id="quickForm">
                                {{ form_start(form, {'attr': {'id': 'field_form'}}) }}
                                        {{ form_errors(form) }}
                                <div class="card-body">
                                    <div class="row">
                                     <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_label(form.nom, "Nom", {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.nom, {'attr': {'class': 'form-control' } }) }}
                                            {{ form_errors(form.nom) }}
                                        </div>
                                        </div>
                                        
                                        <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_label(form.prenom, "Prénom", {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control' } }) }}
                                            {{ form_errors(form.prenom) }}
                                        </div>
                                        </div>

                                        <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_label(form.addresse, "Addresse", {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.addresse, {'attr': {'class': 'form-control' } }) }}
                                            {{ form_errors(form.addresse) }}
                                        </div>
                                        </div>
                                        <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_label(form.telephone, "Numéro de téléphone", {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.telephone, {'attr': {'class': 'form-control' } }) }}
                                            {{ form_errors(form.telephone) }}
                                        </div>
                                        </div>
                                        <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_label(form.email, "E-mail", {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.email, {'attr': {'class': 'form-control' } }) }}
                                            {{ form_errors(form.email) }}
                                        </div>
                                        </div>
                                        <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_label(form.username, "Nom utilisateur", {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.username, {'attr': {'class': 'form-control' } }) }}
                                            {{ form_errors(form.username) }}
                                        </div>

                                        </div>
                                      </div>
                                    </div>
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-sm btn-success float-right">
                                            <i class="fa fa-save"></i>
                                            Sauvegarder</button>
                                        <button type="button" class="btn btn-sm btn-default float-right mr-1 back" onclick='location.href="{{path('users_index') }}"'>
                                            <i class ="fa fa-ban"></i>Annuler</button>  
                                        {{ form_rest(form) }}
                                    {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                    <!-- /.card -->
                    </div>
                </div>
            </div>
        </section>
    {% endblock %}
    {% block autresFichiersJs %}
